@model IEnumerable<Project_BSCS.Models.Property>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/Theme.css" />
    <link rel="stylesheet" href="~/css/main.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <title>Property</title>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary py-3">
            <div class="container-fluid">
                <a class="navbar-brand mx-2" href="#">Project</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav mx-auto">
                        @*<li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home
                                <span class="visually-hidden">(current)</span>
                            </a>
                        </li>*@
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Property" asp-action="Property">Property</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Property" asp-action="AddProperty">Sell</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <partial name="_LoginInfo" />
                    </ul>
                </div>
            </div>
        </nav>
    </header>

 <div class="container w-100 my-5">
    <div class="mt-5 card-body shadow-lg rounded-3">
         <h1 class="text-center my-5">Property</h1>
         <div class="my-4">
             <div class="row justify-content-between align-content-center mx-3">
                 <a class="btn btn-primary rounded-pill col-lg-2 col-md-3 col-sm-4" asp-controller="Property" asp-action="AddProperty"><i class="bi bi-plus-circle"></i> &nbsp;Sell</a>
                 <a class="btn btn-secondary rounded-pill col-lg-2 col-md-3 col-sm-4" asp-controller="Home" asp-action="Index"><i class="bi bi-arrow-left-circle"></i> &nbsp;Home</a>
             </div>
         </div>
         <div class="row align-items-center mt-5">
                @foreach ( var Property in Model)
                {
                    <div class="col-sm-12 col-md-6 col-lg-4 mb-2">
                        <div class="card rounded-3 shadow">
                            <img src="@Property.PropertyImageUrl" class="card-img-top" height="420"></img>
                                <div class="card-body m-1">
                                    <div class="row justify-content-between align-items-center">
                                        <p class="card-text col-lg-12 col-md-12 col-sm-12 text-overflow">@Property.Title</p>
                                    </div>
                                    <small class="row justify-content-start align-items-center mt-2">
                                        <p class="col-lg-12 col-md-12 col-sm-12 text-start"><i class="bi bi-geo-alt-fill"></i>&nbsp;@Property.Location, @Property.City</p>
                                    </small>
                                    <div class="row justify-content-between align-items-center mt-0">
                                        <div class="col-lg-3 col-md-12 col-sm-12">
                                            <small><i class="fa-solid fa-bed"></i> &nbsp;@Property.Bedroom</small><br/>
                                            <small><i class="fa-solid fa-bath"></i> &nbsp; @Property.Bathroom</small>
                                        </div>
                                        <h4 class="card-text text-end col-lg-8 col-md-12 col-sm-12">PKR @Property.Price</h4>
                                    </div>
                                    <div class="row justify-content-between align-content-center mt-1">
                                        <div class="col-lg-3 col-md-3 col-sm-3"></div>
                                        <a href="/Property/getproperty/@Property.Id" class="btn btn-primary btn-sm rounded-3 col-lg-4 col-md-5 col-sm-4">Details</a>
                                    </div>
                                </div>
                        </div>
                    </div>
                }
                
         </div>
    </div>
</div>
<!--Footer Secion-->
        <footer class="border-top text-muted shadow bg-black">
            <div class="container p-3">
                <div class="row justify-content-between align-items-center">
                    <div class="col-sm-12 col-md-5 col-lg-5 text-center">
                        Copyright &copy; Saad Saifullah &nbsp;@DateTime.Now.Year
                    </div>
                    <div class="col-sm-12 col-md-2 col-lg-2 text-center">
                        <a class="text-decoration-none text-muted lh-lg" asp-controller="Home" asp-action="About">About</a>
                    </div>
                    <div class="col-sm-12 col-md-5 col-lg-5 text-center">
                        <a class="text-light" href="https://github.com/saadkhan2211"><i class="bi bi-github"></i></a>&nbsp;
                        <a class="text-light" href="https://www.instagram.com/saadsaifullah.khan/"><i class="bi bi-instagram"></i></a>&nbsp;
                        <a class="text-light" href="https://twitter.com/SaadSaifullah11"><i class="bi bi-twitter"></i></a>
                    </div>
                </div>
            </div>
        </footer>
     <script src="~/lib/jquery/dist/jquery.min.js"></script>
     <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
     <script src="~/js/site.js" asp-append-version="true"></script>

</body>
</html>
