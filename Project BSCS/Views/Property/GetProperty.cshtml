@{
    Layout = null;
}
@model Property

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/Theme.css" />
    <link rel="stylesheet" href="~/css/main.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <title>Property</title>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary py-3">
            <div class="container-fluid">
                <a class="navbar-brand mx-2" href="#">Project</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home
                                <span class="visually-hidden">(current)</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Property" asp-action="Property">Property</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Property" asp-action="AddProperty">Sell</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <partial name="_LoginInfo" />
                    </ul>
                </div>
            </div>
        </nav>
    </header>

<div class="container mt-5">
    <div class="mt-5 card-body shadow-lg rounded-3">
        <div class="row justify-content-evenly align-content-center">
            <div class="col-sm-12 col-md-6 col-lg-6 mb-2">
                <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="true">
                    <div class="carousel-indicators">
                        @for (int i = 0; i < Model.Gallery.Count(); i++)
                            {
                                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="@i" class="@(i==0 ? "active" : "")"></button>
                            }
                    </div>
                    <div class="carousel-inner">
                        @for (int i = 0; i < Model.Gallery.Count(); i++)
                            {
                                <div class="@(i==0 ? "carousel-item active":"carousel-item")">
                                    <img src="@Model.Gallery[i].URL" class="d-block w-100" alt="@Model.Gallery[i].Name">
                                </div>
                            }
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-6 my-3">
                <h4 class="card-title">@Model.Title</h4>
                <h3 class="card-text">PKR @Model.Price</h3>
                <p class="card-text mb-1"><i class="bi bi-geo-alt-fill"></i>&nbsp; @Model.Location, @Model.City</p>
                <p class="card-text mb-1">@Model.Area Sq Yards</p>
                <small><i class="fa-solid fa-bed"></i>&nbsp; @Model.Bedroom</small></br>
                <small class="lh-lg"><i class="fa-solid fa-bath"></i>&nbsp; @Model.Bathroom</small></br>
                <small><i class="bi bi-columns"></i>&nbsp; @Model.Floors Floors</small>
                <h5 class="card-title mt-4 text-black">Nearby Places</h5>
                <small><i class="fa-solid fa-hospital"></i>&nbsp; @Model.Hospital</small></br>
                <small><i class="fa-solid fa-graduation-cap"></i>&nbsp; @Model.Institute</small></br>
                <small><i class="fa-solid fa-bell-concierge"></i>&nbsp; @Model.Hotel</small></br>
                <small class="lh-lg"><i class="bi bi-clock-fill"></i>&nbsp; @Model.CreatedDate</small>
            </div>
        </div>
        <h5 class="card-title mt-4 mb-2 text-black">Description</h5>
        <p class="card-text">@Model.Description</p>

        <h5 class="card-title mt-4 mb-2 text-black">Contact</h5>
            <small><i class="bi bi-person-fill"></i>&nbsp; @Model.Name</small></br>
            <small class="mt-0"><i class="fa-solid fa-phone"></i>&nbsp; @Model.ContactNumber</small></br>
            <small><i class="fa-solid fa-envelope"></i>&nbsp; @User.Identity.Name</small>
        </div>
    </div>
</div>
<!--Footer Secion-->
        <footer class="border-top text-muted shadow bg-black">
            <div class="container p-3">
                <div class="row justify-content-between align-items-center">
                    <div class="col-sm-12 col-md-5 col-lg-5 text-center">
                        Copyright &copy; Saad Saifullah &nbsp;@DateTime.Now.Year
                    </div>
                    <div class="col-sm-12 col-md-2 col-lg-2 text-center">
                        <a class="text-decoration-none text-muted lh-lg" asp-controller="Home" asp-action="About">About</a>
                    </div>
                    <div class="col-sm-12 col-md-5 col-lg-5 text-center">
                        <a class="text-light" href="https://github.com/saadkhan2211"><i class="bi bi-github"></i></a>&nbsp;
                        <a class="text-light" href="https://www.instagram.com/saadsaifullah.khan/"><i class="bi bi-instagram"></i></a>&nbsp;
                        <a class="text-light" href="https://twitter.com/SaadSaifullah11"><i class="bi bi-twitter"></i></a>
                    </div>
                </div>
            </div>
        </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>